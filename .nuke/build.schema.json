{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "Host": {
      "type": "string",
      "enum": [
        "AppVeyor",
        "AzurePipelines",
        "Bamboo",
        "Bitbucket",
        "Bitrise",
        "GitHubActions",
        "GitLab",
        "Jenkins",
        "Rider",
        "SpaceAutomation",
        "TeamCity",
        "Terminal",
        "TravisCI",
        "VisualStudio",
        "VSCode"
      ]
    },
    "ExecutableTarget": {
      "type": "string",
      "enum": [
        "BuildAll",
        "BuildSamples",
        "CheckNewCommits",
        "CI",
        "Clean",
        "CleanSamples",
        "Compile",
        "CreateCommit",
        "CreateGitHubRelease",
        "CreateSamplesReadme",
        "CreateTag",
        "DailyBuild",
        "DailyCheck",
        "DailyCI",
        "DailyPublish",
        "DailyRelease",
        "DailyStatus",
        "ExtractChangelogUnreleased",
        "GitHubCreateCommit",
        "GitHubCreateRelease",
        "GitHubCreateTag",
        "PackageSamples",
        "PackNuGet",
        "Publish",
        "PublishAll",
        "PublishBinaries",
        "PublishIntegrations",
        "PublishLibrary",
        "PublishNuGet",
        "PublishSamples",
        "Release",
        "Restore",
        "ShowCurrentVersion",
        "Test",
        "TestReport",
        "UpdateChangelog",
        "UpdateProjectVersions"
      ]
    },
    "Verbosity": {
      "type": "string",
      "description": "",
      "enum": [
        "Verbose",
        "Normal",
        "Minimal",
        "Quiet"
      ]
    },
    "NukeBuild": {
      "properties": {
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "description": "Host for execution. Default is 'automatic'",
          "$ref": "#/definitions/Host"
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "Partition": {
          "type": "string",
          "description": "Partition to use on CI"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "$ref": "#/definitions/ExecutableTarget"
          }
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "$ref": "#/definitions/ExecutableTarget"
          }
        },
        "Verbosity": {
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "$ref": "#/definitions/Verbosity"
        }
      }
    }
  },
  "allOf": [
    {
      "properties": {
        "ChangelogFile": {
          "type": "string",
          "description": "Changelog file"
        },
        "Configuration": {
          "type": "string",
          "description": "Configuration to build - Default is 'Debug' (local) or 'Release' (server)"
        },
        "CoverageThreshold": {
          "type": "integer",
          "description": "Minimum coverage threshold (default: 80)",
          "format": "int32"
        },
        "ForceDailyRelease": {
          "type": "boolean",
          "description": "Force daily release even without changes"
        },
        "GitHubApiBaseUrl": {
          "type": "string",
          "description": "GitHub API URL"
        },
        "GitHubRepository": {
          "type": "string",
          "description": "GitHub repository"
        },
        "GitHubToken": {
          "type": "string",
          "description": "GitHub token for creating releases"
        },
        "NuGetApiKey": {
          "type": "string",
          "description": "NuGet API Key for publishing packages"
        },
        "NuGetSource": {
          "type": "string",
          "description": "NuGet source URL (default: nuget.org)"
        },
        "PublishDirectory": {
          "type": "string",
          "description": "publish-directory (default: ./publish/{runtimeIdentifier})"
        },
        "PublishReadyToRun": {
          "type": "boolean",
          "description": "publish-ready-to-run (default: false - not applicable for libraries)"
        },
        "PublishSelfContained": {
          "type": "boolean",
          "description": "publish-self-contained (default: true)"
        },
        "PublishSingleFile": {
          "type": "boolean",
          "description": "publish-single-file (default: false - only for executables)"
        },
        "PublishTrimmed": {
          "type": "boolean",
          "description": "publish-trimmed (default: false - libraries should not be trimmed)"
        },
        "RepositoryCompareLink": {
          "type": "string",
          "description": "Repository compare link"
        },
        "RuntimeIdentifier": {
          "type": "string",
          "description": "Runtime identifier for the build (e.g., win-x64, linux-x64, osx-x64) (default: linux-x64)"
        },
        "SampleRuntimes": {
          "type": "array",
          "description": "Runtime identifiers for samples (default: win-x64,linux-x64)",
          "items": {
            "type": "string"
          }
        },
        "SamplesOutputDirectory": {
          "type": "string",
          "description": "Samples output directory (default: ./samples-output)"
        },
        "SkipDailyReleaseOnNoChanges": {
          "type": "boolean",
          "description": "Skip daily release if no changes found"
        },
        "SkipGitHubRelease": {
          "type": "boolean",
          "description": "Skip GitHub release creation"
        },
        "SkipSymbols": {
          "type": "boolean",
          "description": "Skip NuGet symbol packages"
        },
        "Solution": {
          "type": "string",
          "description": "Path to a solution file that is automatically loaded"
        }
      }
    },
    {
      "$ref": "#/definitions/NukeBuild"
    }
  ]
}
